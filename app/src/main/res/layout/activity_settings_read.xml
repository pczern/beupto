<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Reader View"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/settings_subheader_textview_size" />

        <LinearLayout
            android:id="@+id/settings_textoptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="72dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Options"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Size and Line Height"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_divider"></View>


        <LinearLayout
            android:id="@+id/settings_showreaderpanelalways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="72dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Reader Panel Always"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sets if the panel used to like, save, comment etc. will be shown always"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>