        <TextView
            android:layout_marginTop="64dp"
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name_edittext"
            android:text="@string/introduction_interests_title"
            android:textAlignment="center"
            android:textColor="@color/introduction_title"


            android:textSize="30sp"

            />




            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/name_textview"
                android:layout_above="@+id/subinformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                >

            </android.support.v7.widget.RecyclerView>










    <TextView
        android:id="@+id/subinformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="96dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/introduction_interests_subinformation"

        android:textAlignment="center"
        android:textColor="@color/introduction_subinformation" />

</RelativeLayout>