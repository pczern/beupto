<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        layout="@layout/corportate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="96dp"></include>


    <LinearLayout
        android:id="@+id/start_introduction_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"


        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_linearlayout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="28dp">



            <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/introduction_sign_up_start_text"

                android:textColor="@color/introduction_color_accent"
                android:textSize="18sp" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/sign_in_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <TextView
                android:id="@+id/sign_in_question_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Already have Account?"
                android:textColor="@color/dark_text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sign_in_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@+id/sign_in_question_textview"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:text="Sign In"
                android:textColor="@color/introduction_color_accent"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="?colorAccent"
        android:layout_alignParentBottom="true"></View>
</RelativeLayout>