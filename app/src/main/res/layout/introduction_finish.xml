<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/input_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_imageview"
    android:paddingTop="260dp"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android">




        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name_edittext"
            android:text="@string/introduction_finish_title"
            android:textAlignment="center"
            android:textColor="@color/introduction_title"
            android:textSize="30sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"
            android:text="You are just one click away from fantastic beauty"
            android:textAlignment="center"

            android:textColor="@color/introduction_subinformation"
            android:textSize="15sp" />
        <Button
            android:id="@+id/finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Now"
            android:layout_gravity="center"

            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_marginTop="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
         />



    </LinearLayout>


