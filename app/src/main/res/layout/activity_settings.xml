<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">



        <TextView
            android:textSize="@dimen/settings_subheader_textview_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Main"
            android:textColor="?attr/colorAccent" />

        <LinearLayout
            android:id="@+id/settings_refreshview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refresh Interval"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time after which Subscriptions get refreshed/updated"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_divider"></View>


        <LinearLayout
            android:id="@+id/settings_cachesizeview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cache Size"
                android:textSize="@dimen/settings_headline_textview_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory applications takes without user interaction"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>




        <TextView
            android:textSize="@dimen/settings_subheader_textview_size"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Read/Listen/Watch "
            android:textColor="?attr/colorAccent" />

        <LinearLayout
            android:id="@+id/settings_readview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read View"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organize icons"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_divider"></View>
        <LinearLayout
            android:id="@+id/settings_listenview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listen View"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organize icons"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_divider"></View>

        <LinearLayout
            android:id="@+id/settings_watchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watch View"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organize icons"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>


















        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Design"
            android:textSize="@dimen/settings_subheader_textview_size"
            android:textColor="?attr/colorAccent" />

        <LinearLayout
            android:id="@+id/settings_look"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Look"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/settings_headline_textview_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme/Colors/Appearance"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="@dimen/settings_subheadline_textview_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_divider"></View>
        <LinearLayout
            android:id="@+id/settings_fab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Add (+) Button"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textSize="@dimen/settings_headline_textview_size"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sets if the add button on the startpage will show up"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textSize="@dimen/settings_subheadline_textview_size" />
            </LinearLayout>

            <Switch
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_fab_switch"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

        </LinearLayout>
    </LinearLayout>


</ScrollView>